@model IEnumerable<MusicPortal_Asp.Net_MVC_.Models.Song>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">

    <div class="sidebar">
        <div class="sidebar-header">
            <h4 class ="logo"><i class="bi bi-music-note-beamed"></i> Music Portal</h4>
        </div>
        <ul class="sidebar-menu">
            <li>
                @if (Context.Session.GetString("Login") != "Guest")
                {

                    <a href="@Url.Action("CreateSongU", "Home")">
                        <i class="bi bi-music-note-list"></i> Create Song
                    </a>
                }
                <a href="@Url.Action("Index", "Home")">
                    <i class="bi bi-music-note-list"></i>Songs
                </a>
            </li>
        </ul>
    </div>


    <div class="main-content flex-grow-1">
        <div class="container">
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-lg-3 d-flex">

                        <div class="card song-card shadow-sm ">
                           <img src="@Html.DisplayFor(modelItem => item.PathP)" class="card-img-top " alt="photo">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title song-info text-gradient">@Html.DisplayFor(modelItem => item.Title)</h5>
                                <button class="btn btn-theme w-100">
                                <a asp-action="DetailsSongU" asp-route-id="@item.Id" class="text-white text-decoration-none">Details</a> 
                                </button>


                                <audio controls class="w-100 mt-2">
                                    <source src="@Url.Action("GetFile", "Home", new { fileName = item.PathS })">
                                </audio>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </div>

</div>