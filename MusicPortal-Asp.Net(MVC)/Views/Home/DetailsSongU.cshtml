@model MusicPortal_Asp.Net_MVC_.BLL.DTO.SongDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex">



    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <div class="sidebar">
        <div class="sidebar-header">
            <h4><i class="bi bi-music-note-beamed"></i>  Music Portal</h4>
            <button class="sidebar-close" onclick="toggleSidebar()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <ul class="sidebar-menu">
            <li>
                @if (Context.Session.GetString("Login") != "Guest")
                {

                    <a href="@Url.Action("CreateSongU", "Home")">
                        <i class="bi bi-music-note-list"></i> Create Song
                    </a>
                }
                <a href="@Url.Action("Index", "Home")" class="active">
                    <i class="bi bi-music-note-list"></i>Songs
                </a>
            </li>

        </ul>
    </div>




    <div class="main-content container">
            <div class="song-details">
                <div class="row">
                    <div class="col-md-4">
                        <video controls class="img-fluid">
                            <source src="@Model.PathV" type="video/mp4">
                        </video>
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h2>@Html.DisplayFor(model => model.Title)</h2>
                                <div class="d-flex gap-4 text-muted mb-4">
                                    <div class="song-info">
                                        <i class="fas fa-calendar me-2"></i>
                                        <span><strong>Year:</strong> @Html.DisplayFor(model => model.Year)</span>
                                    </div>
                                    <div class="song-info">
                                        <i class="fas fa-user me-2"></i>
                                        <span><strong>Artist:</strong> @Html.DisplayFor(model => model.Artist)</span>
                                    </div>
                                    <div class="song-info">
                                        <i class="fas fa-music me-2"></i>
                                        <span><strong>Genre:</strong> @Html.DisplayFor(model => model.Genre)</span>
                                    </div>
                                    <div class="song-info">
                                        <i class="fas fa-upload me-2"></i>
                                        <span><strong>Uploaded by:</strong> @Html.DisplayFor(model => model.User)</span>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="mt-3">
                            <audio controls src="@Url.Action("GetFile", "Home", new { fileName = Model.PathS })" class="w-100"></audio>
                        </div>
                        <div class="waveform-container mt-4">
                            <div class="waveform"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        
</div>
