@model MusicPortal_Asp.Net_MVC_.Models.Song

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">
  
        <div class="sidebar">
            <div class="sidebar-header">
                <h4><i class="bi bi-music-note-beamed"></i> Music Portal</h4>
            </div>
            <ul class="sidebar-menu">
                <li>
                    @if (Context.Session.GetString("Login") != "Guest")
                    {

                        <a href="@Url.Action("CreateSongU", "Home")">
                        <i class="bi bi-music-note-list"></i> Create Song
                        </a>
                    }
                <a href="@Url.Action("Index", "Home")">
                    <i class="bi bi-music-note-list"></i>Songs
                </a>
                </li>
            </ul>
        </div>
    

    <div class="main-content flex-grow-1">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <video controls class="img-fluid rounded-4 shadow-lg">
                        <source src="@Model.PathV" type="video/mp4">
                    </video>
                </div>
                
                <div class="col-md-8">
                    <h1 class="display-4 text-gradient mb-4">@Html.DisplayFor(model => model.Title)</h1>
                    <div class="d-flex gap-4 text-muted mb-4">
                        <div class="song-info">
                            <i class="fas fa-calendar me-2"></i>
                            <span><strong>Year:</strong> @Html.DisplayFor(model => model.Year)</span>
                        </div>
                        <div class="song-info">
                            <i class="fas fa-user me-2"></i>
                            <span><strong>Artist:</strong> @Html.DisplayFor(model => model.Artist.Name)</span>
                        </div>
                        <div class="song-info">
                            <i class="fas fa-music me-2"></i>
                            <span><strong>Genre:</strong> @Html.DisplayFor(model => model.Genre.Name)</span>
                        </div>
                        <div class="song-info">
                            <i class="fas fa-upload me-2"></i>
                            <span><strong>Uploaded by:</strong> @Html.DisplayFor(model => model.User.Login)</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
