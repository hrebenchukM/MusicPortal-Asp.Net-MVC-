@model IEnumerable<MusicPortal_Asp.Net_MVC_.Models.Genre>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex">

    <div class="sidebar">
        <div class="sidebar-header">
            <h4><i class="bi bi-music-note-beamed"></i> Music Portal</h4>
        </div>
        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="bi bi-house-door"></i> Home</a>
            </li>
            <li>
                <a href="@Url.Action("NoActiveUsers", "Admin")"><i class="bi bi-person-x"></i> No active users</a>
            </li>
            <li>
                <a href="@Url.Action("IndexGenres", "Admin")"><i class="bi bi-tags"></i> Genres</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Admin")"><i class="bi bi-music-note-list"></i> Songs</a>
            </li>
            <li>
                <a href="@Url.Action("IndexArtists", "Admin")"><i class="bi bi-person-badge"></i> Artists</a>
            </li>
            <li>
                <a href="@Url.Action("IndexUsers", "Admin")"><i class="bi bi-people"></i> Users</a>
            </li>
        </ul>
    </div>


    <div class="main-content flex-grow-1">
        <div class="container">
<p>
    <a asp-action="CreateGenre">Create New Genre</a>
</p>
            <section class="container my-5">
                <h2>Popular Genres</h2>
                <div class="row">
                    <div class="col-md-3">
                          @foreach (var item in Model)
                            {
                        <div class="genre-card">
                            <i class="bi bi-music-note display-4"></i>
                          
                                        @Html.DisplayFor(modelItem => item.Name)
                                   
                                        <a asp-action="EditGenre" asp-route-id="@item.Id">Edit</a>
                                        <a asp-action="DetailsGenre" asp-route-id="@item.Id">Details</a> 
                                        <a asp-action="DeleteGenre" asp-route-id="@item.Id">Delete</a>
                                
                           
                        </div>
                        }
                    </div>
                    
                </div>
            </section>



</div>
</div>
</div>
