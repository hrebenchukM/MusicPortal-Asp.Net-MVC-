@model IEnumerable<MusicPortal_Asp.Net_MVC_.Models.Song>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 <div >

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a href="@Url.Action("Index", "Admin")" class="nav-link active"><i class="bi bi-house-door"></i> Home</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("NoActiveUsers", "Admin")" class="nav-link"><i class="bi bi-person-x"></i> No active users</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexGenres", "Admin")" class="nav-link"><i class="bi bi-tags"></i> Genres</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexArtists", "Admin")" class="nav-link"><i class="bi bi-person-badge"></i> Artists</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexUsers", "Admin")"class="nav-link"><i class="bi bi-people"></i> Users</a>
        </li>
       
    </ul>

    

    <div class="tab-content ">
            <p>
            <a asp-action="CreateSong" class="btn btn-theme btn-sm">
                    <i class="bi bi-plus-circle"></i> Create New Song
                </a>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Year)</th>
                            <th>@Html.DisplayNameFor(model => model.PathS)</th>
                            <th>@Html.DisplayNameFor(model => model.PathV)</th>
                            <th>@Html.DisplayNameFor(model => model.PathP)</th>
                            <th>@Html.DisplayNameFor(model => model.Artist)</th>
                            <th>@Html.DisplayNameFor(model => model.Genre)</th>
                            <th>@Html.DisplayNameFor(model => model.User)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                                <td>@Html.DisplayFor(modelItem => item.PathS)</td>
                                <td>@Html.DisplayFor(modelItem => item.PathV)</td>
                                <td>@Html.DisplayFor(modelItem => item.PathP)</td>
                                <td>@Html.DisplayFor(modelItem => item.Artist.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Genre.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.User.Login)</td>
                                <td>
                                    <div class="d-flex gap-1">
                                    <a asp-action="EditSong" asp-route-id="@item.Id" class="btn btn-outline-theme btn-sm">
                                            <i class="bi bi-pencil-square"></i> 
                                        </a>
                                        <a asp-action="DetailsSong" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">
                                            <i class="bi bi-info-circle"></i> 
                                        </a>
                                        <a asp-action="DeleteSong" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> 
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>

