@model IEnumerable<MusicPortal_Asp.Net_MVC_.Models.Song>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div class="d-flex">

    <div class="sidebar">
        <div class="sidebar-header">
            <h4 class="logo"><i class="bi bi-music-note-beamed"></i> Music Portal</h4>
        </div>
        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="bi bi-house-door"></i> Home</a>
            </li>
            <li>
                <a href="@Url.Action("NoActiveUsers", "Admin")"><i class="bi bi-person-x"></i> No active users</a>
            </li>
            <li>
                <a href="@Url.Action("IndexGenres", "Admin")"><i class="bi bi-tags"></i> Genres</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Admin")"><i class="bi bi-music-note-list"></i> Songs</a>
            </li>
            <li>
                <a href="@Url.Action("IndexArtists", "Admin")"><i class="bi bi-person-badge"></i> Artists</a>
            </li>
            <li>
                <a href="@Url.Action("IndexUsers", "Admin")"><i class="bi bi-people"></i> Users</a>
            </li>
        </ul>
    </div>


    <div class="main-content flex-grow-1">
        <div class="container">
            <p>
                <a asp-action="CreateSong">Create New Song</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Year)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PathS)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PathV)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PathP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Artist)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Year)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PathS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PathV)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PathP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Artist.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Genre.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Login)
                            </td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a asp-action="EditSong" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="DetailsSong" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="DeleteSong" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
   
  
</div>

