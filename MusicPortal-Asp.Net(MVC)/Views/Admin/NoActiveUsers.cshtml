@model IEnumerable<MusicPortal_Asp.Net_MVC_.Models.User>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a href="@Url.Action("Index", "Admin")" class="nav-link "><i class="bi bi-house-door"></i> Home</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("NoActiveUsers", "Admin")" class="nav-link active"><i class="bi bi-person-x"></i> No active users</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexGenres", "Admin")" class="nav-link"><i class="bi bi-tags"></i> Genres</a>
        </li>
     
        <li class="nav-item">
            <a href="@Url.Action("IndexArtists", "Admin")" class="nav-link"><i class="bi bi-person-badge"></i> Artists</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexUsers", "Admin")" class="nav-link"><i class="bi bi-people"></i> Users</a>
        </li>

    </ul>



    <div class="tab-content flex-grow-1">
        <div class="container">

            <table class="table table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Login</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Login</td>
                        <td>@(user.IsActive ? "Active" : "Inactive")</td>
                        <td>
                                <a href="@Url.Action("ChangeActiveStatusUser", "Admin", new { id = user.Id })" class="btn btn-success btn-sm">
                                    <i class="bi bi-check-circle"></i> Activate
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>