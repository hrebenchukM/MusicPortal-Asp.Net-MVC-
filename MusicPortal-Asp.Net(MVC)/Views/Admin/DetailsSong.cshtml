@model MusicPortal_Asp.Net_MVC_.Models.Song

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a href="@Url.Action("Index", "Admin")" class="nav-link active"><i class="bi bi-house-door"></i> Home</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("NoActiveUsers", "Admin")" class="nav-link"><i class="bi bi-person-x"></i> No active users</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexGenres", "Admin")" class="nav-link"><i class="bi bi-tags"></i> Genres</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexArtists", "Admin")" class="nav-link"><i class="bi bi-person-badge"></i> Artists</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexUsers", "Admin")" class="nav-link"><i class="bi bi-people"></i> Users</a>
        </li>

    </ul>


    <div class="tab-content">
        <div class="container">
            <div class="shadow-lg p-4 rounded">
                <div class="row align-items-center">
                   
                    <div class="col-md-5 d-flex justify-content-center gap-4">
                        <div class="text-center">
                            <span class="text-muted d-block mb-2"><i class="bi bi-camera-video me-1"></i> <strong>Video:</strong></span>
                            <video controls class="img-fluid rounded shadow" style="width: 220px; height: auto;">
                                <source src="@Model.PathV" type="video/mp4">
                            </video>
                        </div>
                        <div class="text-center">
                            <span class="text-muted d-block mb-2"><i class="bi bi-image me-1"></i> <strong>Photo:</strong></span>
                            <img src="@Html.DisplayFor(modelItem => Model.PathP)" alt="Song cover" class="img-fluid rounded shadow" style="width: 220px; height: auto;">
                        </div>

                    </div>

                    <div class="col-md-7">
                        <h2 class="mb-3">@Html.DisplayFor(model => model.Title)</h2>
                        <div class="d-flex flex-column gap-2 text-muted">
                            <div><i class="fas fa-calendar me-2"></i> <strong>Year:</strong> @Html.DisplayFor(model => model.Year)</div>
                            <div><i class="fas fa-user me-2"></i> <strong>Artist:</strong> @Html.DisplayFor(model => model.Artist.Name)</div>
                            <div><i class="fas fa-music me-2"></i> <strong>Genre:</strong> @Html.DisplayFor(model => model.Genre.Name)</div>
                            <div><i class="fas fa-upload me-2"></i> <strong>Uploaded by:</strong> @Html.DisplayFor(model => model.User.Login)</div>
                            <div><i class="bi bi-music-note me-1"></i> <strong>Audio:</strong>   <audio controls src="@Url.Action("GetFile", "Home", new { fileName = Model.PathS })"></audio></div>

                          

                        </div>

                      

                        <div class="mt-3">
                            <a asp-action="EditSong" asp-route-id="@Model?.Id" class="btn btn-outline-theme px-4">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
