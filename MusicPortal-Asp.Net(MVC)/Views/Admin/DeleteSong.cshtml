@model MusicPortal_Asp.Net_MVC_.Models.Song

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a href="@Url.Action("Index", "Admin")" class="nav-link active"><i class="bi bi-house-door"></i> Home</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("NoActiveUsers", "Admin")" class="nav-link"><i class="bi bi-person-x"></i> No active users</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexGenres", "Admin")" class="nav-link"><i class="bi bi-tags"></i> Genres</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexArtists", "Admin")" class="nav-link"><i class="bi bi-person-badge"></i> Artists</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("IndexUsers", "Admin")" class="nav-link"><i class="bi bi-people"></i> Users</a>
        </li>

    </ul>


    <div class="tab-content">
        <div class="container">
            <div class="delete-confirmation">
                <i class="bi bi-exclamation-triangle"></i>
                <h2>Delete Song</h2>
                <p class="lead">Are you sure you want to delete "Midnight Dreams"?</p>
                <p class="text-muted">This action cannot be undone.</p>



                <div class="song-card my-4">
                    <img src=" @Html.DisplayFor(model => model.PathP)" class="song-cover" alt="Song cover">
                <div>
                        <h5>@Html.DisplayFor(model => model.Title)</h5>
                        <p class="mb-0">  @Html.DisplayFor(model => model.Genre.Name) •  @Html.DisplayFor(model => model.Artist.Name)</p>
                </div>
            </div>

                <div class="action-buttons">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-theme">Cancel</a>
                    <form asp-action="DeleteSong">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete Song" class="btn btn-danger" />

                    </form>
                </div>

            </div>
        </div>

    
  
</div>
</div>